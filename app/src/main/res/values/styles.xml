<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">

    </style>

    <style name="MyAppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#ff5252</item>
    </style>

    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/titleTextColor</item>
    </style>

    <style name="NotImplementedYet">
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/titleTextColor</item>
    </style>
    <style name="Title.Expanded" parent="Title">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Title.collapsed" parent="Title">
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ViewText">
        <item name="android:textColor">@color/titleTextColor</item>
    </style>
    <style name="DrawerNameText" parent="ViewText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!--hint color And Label Color in False State-->
        <item name="android:textColorHint">#0288d1</item>
        <item name="android:textSize">20sp</item>
        <!--Label color in True State And Bar Color False And True State-->
        <item name="colorAccent">#ff5252</item>
        <item name="colorControlNormal">#212121</item>
        <item name="colorControlActivated">#727272</item>
    </style>

    <style name="MyProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>

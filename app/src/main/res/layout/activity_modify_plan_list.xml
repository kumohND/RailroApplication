<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MyApp.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:background="@drawable/edittextstyle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <ImageView
                    android:id="@+id/ic_startime"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_access_time_36pt_2x" />

                <Button
                    android:id="@+id/fix_start_Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ic_startime"
                    android:clickable="false"
                    android:gravity="left|center_vertical"
                    android:text="시작 시간:" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">


                <Button
                    android:id="@+id/fix_end_Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_access_time_36pt_2x"
                    android:gravity="left|center_vertical"
                    android:text="종료 시간:" />


                <LinearLayout
                    android:id="@+id/MoveToTrain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/set_start_station"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_android"
                        android:drawableRight="@drawable/ic_android"
                        android:gravity="left|center_vertical"
                        android:text="출발역:서울역" />

                    <Button
                        android:id="@+id/btn_start_train_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_android" />

                    <LinearLayout
                        android:id="@+id/layout_Station_Start_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_Station_Start_Weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_Station_Start_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="날짜" />

                        <TextView
                            android:id="@+id/tv_Station_Start_Weather_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비옴" />

                        <TextView
                            android:id="@+id/tv_Station_Start_Max_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max temp:" />

                        <TextView
                            android:id="@+id/tv_Station_Start_Min_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min temp:" />

                        <TextView
                            android:id="@+id/tv_Station_Start_Humi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="습도:" />

                        <TextView
                            android:id="@+id/tv_Station_Start_Clouds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="뭉개구름 / 24% " />

                        <TextView
                            android:id="@+id/tv_Station_Start_Winds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="산들바람 24% " />
                    </LinearLayout>

                    <Button
                        android:id="@+id/set_end_station"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_android"
                        android:drawableRight="@drawable/ic_android"
                        android:gravity="left|center_vertical"
                        android:text="도착역:부산역" />

                    <Button
                        android:id="@+id/btn_end_train_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_android" />

                    <LinearLayout
                        android:id="@+id/layout_Station_End_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_Station_End_Weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_Station_End_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="날짜" />

                        <TextView
                            android:id="@+id/tv_Station_End_Weather_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비옴" />

                        <TextView
                            android:id="@+id/tv_Station_End_Max_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max temp:" />

                        <TextView
                            android:id="@+id/tv_Station_End_Min_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min temp:" />

                        <TextView
                            android:id="@+id/tv_Station_End_Humi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="습도:" />

                        <TextView
                            android:id="@+id/tv_Station_End_Clouds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="뭉개구름 / 24% " />

                        <TextView
                            android:id="@+id/tv_Station_End_Winds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="산들바람 24% " />
                    </LinearLayout>


                    <Button
                        android:id="@+id/btn_moving_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_android"
                        android:gravity="left|center_vertical"
                        android:text="이동 시간:" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/MoveTobus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/set_start_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_android"
                        android:drawableRight="@drawable/ic_android"
                        android:gravity="left|center_vertical"
                        android:text="출발지:서울역" />

                    <Button
                        android:id="@+id/btn_start_region_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_android" />

                    <LinearLayout
                        android:id="@+id/layout_Region_Start_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_Region_Start_Weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_Region_Start_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="날짜" />

                        <TextView
                            android:id="@+id/tv_Region_Start_Weather_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비옴" />

                        <TextView
                            android:id="@+id/tv_Region_Start_Max_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max temp:" />

                        <TextView
                            android:id="@+id/tv_Region_Start_Min_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min temp:" />

                        <TextView
                            android:id="@+id/tv_Region_Start_Humi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="습도:" />

                        <TextView
                            android:id="@+id/tv_Region_Start_Clouds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="뭉개구름 / 24% " />

                        <TextView
                            android:id="@+id/tv_Region_Start_Winds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="산들바람 24% " />
                    </LinearLayout>

                    <Button
                        android:id="@+id/set_end_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_android"
                        android:drawableRight="@drawable/ic_android"
                        android:gravity="left|center_vertical"
                        android:text="도착지:부산역" />

                    <LinearLayout
                        android:id="@+id/layout_Region_End_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_Region_End_Weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_Region_End_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="날짜" />

                        <TextView
                            android:id="@+id/tv_Region_End_Weather_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비옴" />

                        <TextView
                            android:id="@+id/tv_Region_End_Max_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max temp:" />

                        <TextView
                            android:id="@+id/tv_Region_End_Min_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min temp:" />

                        <TextView
                            android:id="@+id/tv_Region_End_Humi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="습도:" />

                        <TextView
                            android:id="@+id/tv_Region_End_Clouds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="뭉개구름 / 24% " />

                        <TextView
                            android:id="@+id/tv_Region_End_Winds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="산들바람 24% " />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_end_region_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_android" />

                    <Button
                        android:id="@+id/btn_moving_time2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_android"
                        android:gravity="left|center_vertical"
                        android:text="이동 경로" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ToMeal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_toMeal_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_android"
                        android:gravity="left|center_vertical"
                        android:text="식사 장소:" />

                    <Button
                        android:id="@+id/btn_meal_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_android" />

                    <LinearLayout
                        android:id="@+id/layout_Meal_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_Meal_Weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_Meal_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="날짜" />

                        <TextView
                            android:id="@+id/tv_Meal_Weather_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비옴" />

                        <TextView
                            android:id="@+id/tv_Meal_Max_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max temp:" />

                        <TextView
                            android:id="@+id/tv_Meal_Min_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min temp:" />

                        <TextView
                            android:id="@+id/tv_Meal_Humi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="습도:" />

                        <TextView
                            android:id="@+id/tv_Meal_Clouds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="뭉개구름 / 24% " />

                        <TextView
                            android:id="@+id/tv_Meal_Winds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="산들바람 24% " />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Sleep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_Sleep_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_android"
                        android:gravity="left|center_vertical"
                        android:text="숙박 장소:" />

                    <Button
                        android:id="@+id/btn_Sleep_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_android" />

                    <LinearLayout
                        android:id="@+id/layout_Sleep_Weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_Sleep_Weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_Sleep_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="날짜" />

                        <TextView
                            android:id="@+id/tv_Sleep_Weather_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="비옴" />

                        <TextView
                            android:id="@+id/tv_Sleep_Max_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max temp:" />

                        <TextView
                            android:id="@+id/tv_Sleep_Min_Temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min temp:" />

                        <TextView
                            android:id="@+id/tv_Sleep_Humi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="습도:" />

                        <TextView
                            android:id="@+id/tv_Sleep_Clouds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="뭉개구름 / 24% " />

                        <TextView
                            android:id="@+id/tv_Sleep_Winds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="산들바람 24% " />
                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/tv_DoSomething"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_android"
                    android:gravity="left|center_vertical"
                    android:text="Explain" />

                <Button
                    android:id="@+id/btn_success_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="완료" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/share_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_white"
        app:borderWidth="0dp"
        app:layout_anchor="@id/coordinator_layout"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>


